@model IEnumerable<SknC.Web.Core.Entities.Ingredient>

@{
    ViewData["Title"] = "Ingredients Catalog";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Ingredients Catalog ðŸ§ª</h2>
        <a asp-action="Create" class="btn btn-primary">+ New Ingredient</a>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>INCI Name</th>
                <th>Common Name</th>
                <th>Function</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">@item.InciName</td>
                    <td>@item.CommonName</td>
                    <td><span class="badge bg-secondary">@item.Function</span></td>
                    <td class="text-muted small">@item.Description</td>
                </tr>
            }
        </tbody>
    </table>
</div>
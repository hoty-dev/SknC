@model IEnumerable<SknC.Web.Core.Entities.InventoryProduct>

@{
    ViewData["Title"] = "My Shelf";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Skin Shelf üß¥</h2>
        <a asp-action="Create" class="btn btn-primary">
            + Add Product
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-light border text-center py-5">
            <h4>Your shelf is empty!</h4>
            <p>Start adding products to build your routine.</p>
            <a asp-action="Create" class="btn btn-outline-primary mt-2">Add First Product</a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <!-- Category Badge -->
                            <span class="badge bg-secondary float-end">@item.ProductReference?.Category</span>
                            
                            <!-- Brand & Name -->
                            <h5 class="card-title text-primary">@item.ProductReference?.Brand</h5>
                            <h6 class="card-subtitle mb-3 text-muted">@item.ProductReference?.CommercialName</h6>
                            
                            <hr class="my-2" />
                            
                            <!-- Quick Info -->
                            <div class="mb-3">
                                <span class="badge bg-light text-dark border">@item.Status</span>
                                @if(item.PurchasePrice.HasValue)
                                {
                                    <span class="text-muted small ms-2">Paid: $@item.PurchasePrice</span>
                                }
                            </div>
                            
                            <!-- Actions Buttons -->
                            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm flex-grow-1">
                                    üîç Composition
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                    üóëÔ∏è Remove
                                </a>
                            </div>
                        </div>
                        <div class="card-footer bg-white text-muted">
                            <small>Opened: @(item.DateOpened?.ToShortDateString() ?? "Not yet")</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
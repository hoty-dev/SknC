@model IEnumerable<SknC.Web.Core.Entities.Routine>

@{
    ViewData["Title"] = "My Routines";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Routines</h2>
        <a asp-action="Create" class="btn btn-primary">
            + New Routine
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-light border text-center py-5">
            <h4>No routines yet! üìÖ</h4>
            <p>Create a morning or evening routine to start tracking.</p>
            <a asp-action="Create" class="btn btn-outline-primary mt-2">Create First Routine</a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 bg-light">
                        <div class="card-body text-center">
                            <h5 class="card-title text-primary">@item.Name</h5>
                            <span class="badge bg-secondary mb-3">@item.Type</span>
                            
                            <p class="card-text text-muted">
                                @(item.Steps?.Count ?? 0) Steps configured
                            </p>
                            
                            <hr class="my-4" />

                            <div class="d-flex justify-content-center gap-2">
                                <!-- View Details Button -->
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark">
                                    ‚öôÔ∏è Configure
                                </a>

                                <!-- CHECK-IN BUTTON (Ticket #8) -->
                                <form asp-action="Execute" asp-route-id="@item.Id" method="post">
                                    <button type="submit" class="btn btn-sm btn-success" title="Mark as done for today">
                                        ‚úÖ Do it!
                                    </button>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
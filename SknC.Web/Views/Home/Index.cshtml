@model SknC.Web.Models.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5 fw-bold text-primary">Hello! 👋</h1>
            <p class="lead text-muted">
                Here is your skin summary for today.
                <span class="badge bg-info text-dark ms-2 shadow-sm" style="vertical-align: middle;">
                    Type: @Model.UserSkinType
                </span>
            </p>
        </div>
    </div>

    <!-- Row 1: KPI Cards -->
    <div class="row g-4 mb-5">
        <!-- Card 1: Today's Progress -->
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title opacity-75">Today's Goals</h5>
                    <div class="d-flex align-items-center justify-content-between mt-3">
                        <h2 class="display-4 fw-bold mb-0">@Model.CompletedToday</h2>
                        <span style="font-size: 2rem;">✅</span>
                    </div>
                    <p class="mt-2 mb-0 small opacity-75">Out of @Model.TotalRoutines routines.</p>
                </div>
            </div>
        </div>

        <!-- NEW Card 2: Habit Streak (Ticket #30) -->
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm bg-danger text-white">
                <div class="card-body">
                    <h5 class="card-title opacity-75">Current Streak</h5>
                    <div class="d-flex align-items-center justify-content-between mt-3">
                        <h2 class="display-4 fw-bold mb-0">@Model.CurrentStreak</h2>
                        <span style="font-size: 2rem;">🔥</span>
                    </div>
                    <p class="mt-2 mb-0 small opacity-75">
                        Consistency: @Model.MonthlyConsistency%
                    </p>
                </div>
            </div>
        </div>

        <!-- Card 3: Shelf Stats -->
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-muted">Shelf</h5>
                    <div class="d-flex align-items-center justify-content-between mt-3">
                        <h2 class="display-4 fw-bold mb-0 text-dark">@Model.ActiveProducts</h2>
                        <span style="font-size: 2rem;">🧴</span>
                    </div>
                    <p class="mt-2 mb-0 small text-muted">@Model.TotalProducts total items.</p>
                </div>
            </div>
        </div>

        <!-- Card 4: Quick Actions -->
        <div class="col-md-3">
            <div class="card h-100 border-dashed border-2 bg-light">
                <div class="card-body text-center d-flex flex-column justify-content-center">
                    <h5 class="text-muted mb-3">Quick Actions</h5>
                    <div class="d-grid gap-2 w-100">
                        <a asp-controller="Routine" asp-action="Index" class="btn btn-outline-primary btn-sm">▶ Routines</a>
                        <a asp-controller="Journal" asp-action="Create" class="btn btn-outline-success btn-sm">📝 Journal</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Row 2: Chart & Alerts -->
    <div class="row g-4">
        <!-- Chart Column -->
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-0 pt-4 px-4">
                    <h5 class="fw-bold mb-0">Skin Progress (Rating 1-10)</h5>
                </div>
                <div class="card-body px-4 pb-4">
                    @if (Model.ChartValues != null && Model.ChartValues.Length > 0)
                    {
                        <canvas id="skinChart" height="120"></canvas>
                    }
                    else
                    {
                        <div class="alert alert-secondary text-center">
                            Not enough data yet. Add some <a asp-controller="Journal" asp-action="Create">Journal Entries</a> to see the graph!
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Alerts Column -->
        <div class="col-lg-4">
            <h5 class="mb-3">⚠️ Alerts</h5>
            
            @if (!Model.ExpiringSoon.Any())
            {
                <div class="alert alert-success d-flex align-items-center" role="alert">
                    <div class="me-2">🎉</div>
                    <div>
                        Everything looks good! No products are expiring soon.
                    </div>
                </div>
            }
            else
            {
                <div class="list-group shadow-sm">
                    @foreach (var item in Model.ExpiringSoon)
                    {
                        <div class="list-group-item list-group-item-action border-start border-4 border-warning">
                            <div class="fw-bold">@item.ProductReference?.Brand</div>
                            <small class="text-danger">
                                Opened: @(item.DateOpened?.ToShortDateString()) 
                            </small>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <!-- Chart.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        const chartData = @Json.Serialize(Model.ChartValues);
        const chartLabels = @Json.Serialize(Model.ChartLabels);

        if (chartData && chartData.length > 0) {
            const ctx = document.getElementById('skinChart').getContext('2d');
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: chartLabels,
                    datasets: [{
                        label: 'Overall Skin Rating',
                        data: chartData,
                        borderColor: '#0d6efd',
                        backgroundColor: 'rgba(13, 110, 253, 0.1)',
                        tension: 0.3,
                        fill: true,
                        pointRadius: 5
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: { min: 0, max: 10, grid: { color: '#f0f0f0' } },
                        x: { grid: { display: false } }
                    },
                    plugins: { legend: { display: false } }
                }
            });
        }
    </script>
}
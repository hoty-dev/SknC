@model IEnumerable<SknC.Web.Core.Entities.InventoryProduct>

@{
    ViewData["Title"] = "My Inventory";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>My Skin Shelf</h2>
        <a asp-action="Create" class="btn btn-primary">
            + Add Product
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            Your shelf is empty! Start by adding some products.
        </div>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Brand</th>
                    <th>Product</th>
                    <th>Category</th>
                    <th>Status</th>
                    <th>Opened</th>
                    <th>Price</th>
                    <th>Notes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductReference?.Brand</td>
                        <td>@item.ProductReference?.CommercialName</td>
                        <td>@item.ProductReference?.Category</td>
                        <td>
                            <span class="badge bg-secondary">@item.Status</span>
                        </td>
                        <td>
                            @(item.DateOpened.HasValue ? item.DateOpened.Value.ToShortDateString() : "-")
                        </td>
                        <td>
                            @(item.PurchasePrice.HasValue ? "$" + item.PurchasePrice : "-")
                        </td>
                        <td>@item.PersonalNotes</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
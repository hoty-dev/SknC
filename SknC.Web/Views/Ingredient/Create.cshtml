@model SknC.Web.Core.Entities.Ingredient
@using SknC.Web.Core.Enums

@{
    ViewData["Title"] = "New Ingredient";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Add Ingredient</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div class="mb-3">
                            <label asp-for="InciName" class="form-label fw-bold"></label>
                            <input asp-for="InciName" class="form-control" placeholder="e.g. Niacinamide" />
                            <span asp-validation-for="InciName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CommonName" class="form-label fw-bold"></label>
                            <input asp-for="CommonName" class="form-control" placeholder="e.g. Vitamin B3" />
                            <span asp-validation-for="CommonName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Function" class="form-label fw-bold"></label>
                            <select asp-for="Function" asp-items="Html.GetEnumSelectList<IngredientFunction>()" class="form-select"></select>
                            <span asp-validation-for="Function" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Save to Catalog</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
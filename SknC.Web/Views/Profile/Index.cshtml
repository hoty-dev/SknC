@model SknC.Web.Models.ViewModels.UserProfileViewModel
@using SknC.Web.Core.Enums

@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h3 class="mb-0 text-primary">My Profile ðŸ‘¤</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="post">
                        <!-- FIX: Hidden input to ensure Email is sent back to server -->
                        <input type="hidden" asp-for="Email" />
                        
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Email (Read Only Display) -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label text-muted"></label>
                            <!-- The disabled input is just for show, it doesn't send data -->
                            <input asp-for="Email" class="form-control bg-light" disabled />
                            <small class="text-muted">Email cannot be changed directly.</small>
                        </div>

                        <!-- Full Name -->
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label fw-bold"></label>
                            <input asp-for="FullName" class="form-control" placeholder="Your Name" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <!-- Skin Type Selector -->
                        <div class="mb-4">
                            <label asp-for="SkinType" class="form-label fw-bold"></label>
                            <!-- ASP.NET Helper creates dropdown from Enum automatically -->
                            <select asp-for="SkinType" asp-items="Html.GetEnumSelectList<SkinType>()" class="form-select"></select>
                            <span asp-validation-for="SkinType" class="text-danger"></span>
                            <div class="form-text text-info">
                                Knowing your skin type helps us warn you about ingredient conflicts.
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
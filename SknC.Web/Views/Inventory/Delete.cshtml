@model SknC.Web.Core.Entities.InventoryProduct

@{
    ViewData["Title"] = "Remove Product";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Remove Product?</h4>
                </div>
                <div class="card-body">
                    <p class="lead">Are you sure you want to remove this item from your shelf?</p>
                    
                    <div class="alert alert-light border">
                        <h5 class="text-primary">@Model.ProductReference?.Brand</h5>
                        <h6>@Model.ProductReference?.CommercialName</h6>
                        <hr/>
                        <small class="text-muted">Status: @Model.Status</small>
                    </div>

                    <p class="text-danger small">
                        <i class="bi bi-exclamation-triangle"></i> 
                        This action cannot be undone.
                    </p>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-danger">Confirm Removal</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
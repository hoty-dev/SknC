@model SknC.Web.Models.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5 fw-bold text-primary">Hello, Test User! 👋</h1>
            <p class="lead text-muted">Here is your skin summary for today.</p>
        </div>
    </div>

    <!-- Stats Cards Row -->
    <div class="row g-4 mb-5">
        <!-- Card 1: Routine Status -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title opacity-75">Routines Done Today</h5>
                    <div class="d-flex align-items-center justify-content-between mt-3">
                        <h2 class="display-4 fw-bold mb-0">@Model.CompletedToday</h2>
                        <span style="font-size: 2rem;">✅</span>
                    </div>
                    <p class="mt-2 mb-0 small opacity-75">
                        Out of @Model.TotalRoutines routines configured.
                    </p>
                </div>
            </div>
        </div>

        <!-- Card 2: Active Products -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-muted">Active Products</h5>
                    <div class="d-flex align-items-center justify-content-between mt-3">
                        <h2 class="display-4 fw-bold mb-0 text-dark">@Model.ActiveProducts</h2>
                        <span style="font-size: 2rem;">🧴</span>
                    </div>
                    <p class="mt-2 mb-0 small text-muted">
                        Total shelf size: @Model.TotalProducts items.
                    </p>
                </div>
            </div>
        </div>

        <!-- Card 3: Quick Action -->
        <div class="col-md-4">
            <div class="card h-100 border-dashed border-2 bg-light">
                <div class="card-body d-flex flex-column justify-content-center align-items-center text-center">
                    <h5 class="text-muted mb-3">Quick Actions</h5>
                    <div class="d-grid gap-2 w-100">
                        <a asp-controller="Routine" asp-action="Index" class="btn btn-outline-primary">
                            ▶ Go to Routines
                        </a>
                        <a asp-controller="Inventory" asp-action="Create" class="btn btn-outline-secondary">
                            + Add Product
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Expiring Soon Section -->
    <div class="row">
        <div class="col-12">
            <h4 class="mb-3">⚠️ Expiring Soon / Alerts</h4>
            
            @if (!Model.ExpiringSoon.Any())
            {
                <div class="alert alert-success d-flex align-items-center" role="alert">
                    <div class="me-2">🎉</div>
                    <div>
                        Everything looks good! No products are expiring soon.
                    </div>
                </div>
            }
            else
            {
                <div class="list-group shadow-sm">
                    @foreach (var item in Model.ExpiringSoon)
                    {
                        <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center border-start border-4 border-warning">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">@item.ProductReference?.Brand - @item.ProductReference?.CommercialName</div>
                                <small class="text-danger">
                                    Opened: @(item.DateOpened?.ToShortDateString()) 
                                    (PAO: @item.PaoMonths M)
                                </small>
                            </div>
                            <span class="badge bg-warning text-dark rounded-pill">Check Expiration</span>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>